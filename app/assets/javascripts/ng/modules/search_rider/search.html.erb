<section>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#searchRiderModal">
    Search rider
  </button>

  <!-- Modal -->
  <div class="modal fade" id="searchRiderModal" tabindex="-1" role="dialog" aria-labelledby="searchRiderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="searchRiderModalLabel">Search Rider</h4>
        </div>
        <div class="modal-body">

          <div class="form-group">
            <label class="col-lg-2 control-label" for="tag_list">Tags</label>
            <div class="col-lg-10">
              <input class="form-control" type="text" ng-model="tag_list">
            </div>
          </div>
         
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <input class="btn btn-default" type="button" value="Search" ng-click="search()">
            </div>
          </div>

          <p>selected rider id : {{uid}}</p>
<!--           <div ng-repeat="user in user_list" > 
            <input type="radio" ng-model="uid" ng-value="{{user.id}}">{{user.first_name}} {{ user.last_name}}
          </div> -->
          <select ng-model="uid">
            <option ng-repeat="rider in rider_list" value="{{rider.id}}">{{rider.name}}</option>
          </select>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary"  data-dismiss="modal" ng-click="fetchRider(uid)">Set</button>
        </div>
      </div>
    </div>
  </div>
</section>