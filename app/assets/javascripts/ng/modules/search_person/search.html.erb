<section>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#searchUserModal">
    Search User
  </button>

  <div class="row">

      <!-- Modal -->
      <div class="modal fade" id="searchUserModal" tabindex="-1" role="dialog" aria-labelledby="searchUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="searchUserModalLabel">Search User</h4>
            </div>
            <div class="modal-body">
              <div class="form-horizontal">
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label" for="insured_user_first_name">First name</label>  
                  </div>
                  <div class="col-sm-10">
                    <input class="form-control" type="text" ng-model="firstname">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-2">
                    <label class="control-label" for="insured_user_last_name">Last name</label>
                  </div>
                  <div class="col-sm-10">
                    <input class="form-control" type="text" ng-model="lastname">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                    <input class="btn btn-default" type="button" value="Search" ng-click="search()">
                  </div>
                </div>

                <p>selected user is : {{uid}}</p>
                <select ng-model="uid">
                  <option ng-repeat="user in user_list" value="{{user.id}}">{{user.first_name}} {{ user.last_name}}</option>
                </select>

              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="uid=null">Cancel</button>
              <button type="button" class="btn btn-primary"  data-dismiss="modal">Done</button>
            </div>
          </div>
        </div>
      </div>

  </div>

</section>