.fake-bg {
	background-image: url(<%= asset_path "ALL.png" %>);
	background-repeat: no-repeat;
	background-size: 100% auto;
	width: 100%;
	height: 2000px;
}


.profile-wrapper {
	.profile-1 {
		margin-top: 33px;
	}
	.box-right-dotted {
  	border-right: 2px dotted;
  }
	.detailed-box {
		margin-top: 12px;
    text-align: center;

    .box-header {
    	font-size: 24px;
    }
    .box-content {
			font-size: 12px;
    }


	}

	.profile-2 {
		margin-top: 40px;
		.row {
			border-top: 2px dotted;
			.col-md-3, .col-md-2{
				  margin: 10px;
			}
		}

		.right-border {
			border-right: 2px dotted;
		}

		.end-row {
			border-bottom: 2px dotted;
		}
	}
}

.relation {
	margin-top: 120px;

	.group-wrapper {
		border-top: 2px dotted;
		margin: 15px 0;
	}
}

.book-navbar {
	margin-top: 27px;
	margin-bottom: 40px;
}

.book {
	margin-top: 50px;
	margin-left: 84px;

	.book-card-wrapper {
		margin-right: 150px;		

		.book-card {
			background-color: rgb(203, 198, 198);
			height: 410px;
			.row {
				margin-top: 10px;
				margin-bottom: 10px;
			}
			.book-new {
				text-align: center;
  			padding-top: 183px;
			}
		}
	}
}






