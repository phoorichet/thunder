  <h3>Rider Listing</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Code name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @book.riders.each do |rider| %>
        <tr>
          <td><%= rider.name %></td>
          <td><%= rider.description %></td>
          <td><%= rider.status %></td>
          <td><%= rider.code_name %></td>
          <td><%= link_to 'Show', book_rider_path(rider.book, rider) %></td>
          <td><%= link_to 'Edit', edit_book_rider_path(rider.book, rider) %></td>
          <td><%= link_to 'Destroy', [rider.book, rider], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Add new rider', new_book_rider_path(@book) %>
