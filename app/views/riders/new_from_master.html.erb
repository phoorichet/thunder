<div class="row">
  <div class="col-lg-12">
    <h1>New Rider From Master</h1>    
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
      <%= form_for([@rider.plan, @rider], url: create_from_master_plan_riders_path(@rider.plan, @rider), html: {class: "form-horizontal"}) do |f| %>
        <% if @rider.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h2><%= pluralize(@rider.errors.count, "error") %> prohibited this rider from being saved:</h2>

            <ul>
            <% @rider.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :status, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.select :status, options_for_select([ "active", "inactive"]) %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :code_name, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :code_name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :master_rider, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.collection_select(:master_rider_id, Rider.master.all, :id, :name) %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit 'submit', class: 'btn btn-primary' %>
          </div>  
        </div>

      <% end %>
  </div>
  <div class="col-lg-6">
    <h3>Search from master rider</h3>
    <p>Rider ID: {{ rider_id }}</p>
    <search-rider-panel id="coverageSearch" uid="rider_id">
    </search-rider-panel>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
      <%= link_to 'Back', plan_riders_path(@rider.plan) %>    
  </div>
</div>


