<%= form_for(@rider, url: master_riders_path(@rider) ) do |f| %>
  <% if @rider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rider.errors.count, "error") %> prohibited this rider from being saved:</h2>

      <ul>
      <% @rider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, options_for_select([ "active", "inactive"]) %>
  </div>
  <div class="form-group">
    <%= f.label :code_name %>
    <%= f.text_field :code_name, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit 'creat master rider', class: 'btn btn-primary' %>
  </div>
<% end %>