<h3>Rider</h3>

<%= link_to 'Edit', edit_plan_rider_path(@rider.plan, @rider) %> <br>

<p>
  <strong>Name:</strong>
  <%= @rider.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @rider.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @rider.status %>
</p>

<p>
  <strong>Code name:</strong>
  <%= @rider.code_name %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @rider.tag_list %>
</p>


<h1>Listing Coverages</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Assured amount</th>
      <th>Category</th>
      <th>Premium amount</th>
      <th>Premium unit</th>
      <th>Coverage unit</th>
      <th>Coverage end at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rider.coverages.each do |coverage| %>
      <tr>
        <td><%= coverage.name %></td>
        <td><%= coverage.description %></td>
        <td><%= coverage.assured_amount %></td>
        <td><%= coverage.category %></td>
        <td><%= coverage.premium_amount %></td>
        <td><%= coverage.premium_unit %></td>
        <td><%= coverage.coverage_unit %></td>
        <td><%= coverage.coverage_end_at %></td>
        <td><%= link_to 'Show', rider_coverage_path(coverage.rider, coverage) %></td>
        <td><%= link_to 'Edit', edit_rider_coverage_path(coverage.rider, coverage) %></td>
        <td><%= link_to 'Destroy', [coverage.rider, coverage], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add coverage', new_rider_coverage_path(@rider) %>
<br/>

<% if @rider.plan.is_master? %>
  <%= link_to 'Back To Master Plan', master_plan_path(@rider.plan) %>
<% elsif %>
  <%= link_to 'Back To plan', book_plan_path(@rider.plan.book, @rider.plan) %>
<% end %>


