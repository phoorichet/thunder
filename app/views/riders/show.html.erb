<h3>Rider</h3>

<%= link_to 'Edit', edit_book_rider_path(@rider.book, @rider) %> <br>

<p>
  <strong>Name:</strong>
  <%= @rider.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @rider.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @rider.status %>
</p>

<p>
  <strong>Code name:</strong>
  <%= @rider.code_name %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @rider.tag_list %>
</p>


<h1>Listing Coverages</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rider.coverages.each do |coverage| %>
      <tr>
        <td><%= coverage.key %></td>
        <td><%= coverage.value %></td>
        <td><%= coverage.description %></td>
        <td><%= link_to 'Show', rider_coverage_path(coverage.rider, coverage) %></td>
        <td><%= link_to 'Edit', edit_rider_coverage_path(coverage.rider, coverage) %></td>
        <td><%= link_to 'Destroy', [coverage.rider, coverage], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add coverage', new_rider_coverage_path(@rider) %>
<br/>

<% if @rider.is_master? %>
  <%= link_to 'Back To Master Rider', master_rider_path(@rider) %>
<% elsif %>
  <%= link_to 'Back To book', person_book_path(@rider.book.person, @rider.book) %>
<% end %>


