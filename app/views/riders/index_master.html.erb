<div class="page-header">
  <%= link_to new_master_rider_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Master
  <% end %>
  <h1>Listing insurances</h1>
</div>


<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Status</th>
          <th>Code name</th>
          <th>Tags</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @riders.each do |rider| %>
          <tr>
            <td><%= rider.name %></td>
            <td><%= rider.description %></td>
            <td><%= rider.status %></td>
            <td><%= rider.code_name %></td>
            <td><%= rider.tag_list %></td>
            <td><%= link_to 'Show', master_rider_path(rider) %></td>
            <td><%= link_to 'Edit', edit_master_rider_path(rider) %></td>
            <td><%= link_to 'Destroy', master_rider_path(rider), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="text-center">
      <%= paginate @riders, :theme => 'twitter-bootstrap-3' %>
    </div>    
  </div>
</div>




