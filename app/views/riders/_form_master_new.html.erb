<div class="row">
  <div class="col-lg-12">
    <%= form_for(@rider, url: master_riders_path(@rider), html: {class: "form-horizontal"} ) do |f| %>
    <% if @rider.errors.any? %>
      <div id="error_exinsuranceation">
        <h2><%= pluralize(@rider.errors.count, "error") %> prohibited this rider from being saved:</h2>

        <ul>
        <% @rider.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :code_name, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :code_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :premium, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :premium, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :amount, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :amount, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :tag_list, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :tag_list, :value => "#{@rider.tag_list}", class: "form-control thunder-taginput", "data-role" => "tagsinput" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :status, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.select :status, options_for_select([ "active", "inactive"]) %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit 'submit', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
  </div>
</div>
