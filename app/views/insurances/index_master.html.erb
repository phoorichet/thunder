<div class="page-header">
  <%= link_to new_master_insurance_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Insurance
  <% end %>
  <h1>Listing insurances</h1>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Minimum Age</th>
      <th>Maximum Age</th>
      <th>Consider Year</th>
      <th>Consider Gender</th>
      <th>Paid Period</th>
      <th>Protection Length</th>
      <th>Group</th>
      <th>Company</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.name %></td>
        <td><%= insurance.minimum_age %></td>
        <td><%= insurance.maximum_age %></td>
        <td><%= insurance.consider_year %></td>
        <td><%= insurance.consider_gender %></td>
        <td><%= insurance.paid_period_length %></td>
        <td><%= insurance.protection_length %></td>
        <td><%= insurance.group %></td>
        <td><%= insurance.company %></td>
        <td><%= insurance.tag_list %></td>
        <td><%= link_to 'Show', master_insurance_path(insurance) %></td>
        <td><%= link_to 'Edit', edit_master_insurance_path(insurance) %></td>
        <td><%= link_to 'Destroy', master_insurance_path(insurance), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @insurances, :theme => 'twitter-bootstrap-3' %>
