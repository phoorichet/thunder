<div class="page-header">
  <% if  @coverage.rider.is_master? %>
    <%= link_to master_rider_path(@coverage.rider),  class: 'btn btn-default'  do %> 
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>    
  <% end -%>

  <% if  @coverage.rider.book != nil %>
    <%= link_to book_rider_path(@coverage.rider.book, @coverage.rider),  class: 'btn btn-default'  do %> 
      <span class="glyphicon glyphicon-list-alt"></span>
      Back
    <% end %>    
  <% end -%>

  <%= link_to edit_rider_coverage_path(@coverage.rider, @coverage), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show coverage</h1>
</div>

<dl class="dl-horizontal">
  <dt>Key:</dt>
  <dd><%= @coverage.key %></dd>

  <dt>Value:</dt>
  <dd><%= @coverage.value %></dd>

  <dt>Desciption:</dt>
  <dd><%= @coverage.description %></dd>

  <dt>Tag List:</dt>
  <dd><%= @coverage.tag_list %></dd>

</dl>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th>Tag List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coverage.sub_coverages.each do |coverage| %>
      <tr>
        <td>
          <p><%= coverage.key %></p>
          <p><%= coverage.description %></p>
        </td>
        <td><%= coverage.value %></td>
        <td><%= coverage.tag_list %></td>
        <td><%= link_to 'Show', rider_coverage(coverage.rider, coverage) %></td>
        <td><%= link_to 'Edit', edit_rider_coverage_path(coverage.rider, coverage) %></td>
        <td><%= link_to 'Destroy', coverage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
