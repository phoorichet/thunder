<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @coverage.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @coverage.description %>
</p>

<p>
  <strong>Coverage amount:</strong>
  <%= @coverage.assured_amount %>
</p>

<p>
  <strong>Category:</strong>
  <%= @coverage.category %>
</p>

<p>
  <strong>Rider:</strong>
  <%= @coverage.rider_id %>
</p>

<p>
  <strong>Premium amount:</strong>
  <%= @coverage.premium_amount %>
</p>

<p>
  <strong>Premium unit:</strong>
  <%= @coverage.premium_unit %>
</p>

<p>
  <strong>Coverage unit:</strong>
  <%= @coverage.coverage_unit %>
</p>

<p>
  <strong>Coverage end at:</strong>
  <%= @coverage.coverage_end_at %>
</p>

<%= link_to 'Edit', edit_rider_coverage_path(@coverage.rider, @coverage) %> |

<% if  @coverage.rider.rider_type == 'master' %>
<%= link_to 'Back to master rider', master_rider_path(@coverage.rider) %> |
<% end -%>


<% if  @coverage.rider.book != nil %>
<%= link_to 'Back to book', book_rider_path(@coverage.rider.book, @coverage.rider) %>
<% end -%>
