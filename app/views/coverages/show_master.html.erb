<div class="page-header">
  <%= link_to masters_coverages_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %> 

  <%= link_to edit_master_coverage_path(@coverage), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @coverage.key %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Key:</dt>
  <dd><%= @coverage.key %></dd>

  <dt>Value:</dt>
  <dd><%= @coverage.value %></dd>

  <dt>Desciption:</dt>
  <dd><%= @coverage.description %></dd>

  <dt>Tag List:</dt>
  <dd><%= @coverage.tag_list %></dd>

</dl>

<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Key</th>
          <th>Value</th>
          <th>Tag List</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @coverage.sub_coverages.each do |coverage| %>
          <tr>
            <td>
              <p>
                <%= coverage.key %>
              </p>
              <p>
                <%= coverage.description %>
              </p>
            </td>
            <td><%= coverage.value %></td>
            <td><%= coverage.tag_list %></td>
            <td><%= link_to 'Show', master_coverage_path(coverage) %></td>
            <td><%= link_to 'Edit', edit_master_coverage_path(coverage) %></td>
            <td><%= link_to 'Destroy', master_coverage_path(coverage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>  

<div class="row">
  <div class="col-xs-12">
    <% if @coverage.coverage_id == nil %>
    <%= link_to "Add", new_master_coverage_path(coverage_id: @coverage.id), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


