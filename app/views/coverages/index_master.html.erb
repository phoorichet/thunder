<div class="page-header">
  <%= link_to new_master_coverage_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Coverage
  <% end %>
  <h1>Listing Master Coverages</h1> 
</div>


<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Category</th>
          <th>Tags</th>
          <th>Assured amount</th>
          <th>Premium amount</th>
          <th>Premium unit</th>
          <th>Coverage unit</th>
          <th>Coverage end at</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @coverages.each do |coverage| %>
          <tr>
            <td><%= coverage.name %></td>
            <td><%= coverage.category %></td>
            <td><%= coverage.tag_list %></td>
            <td><%= coverage.assured_amount %></td>
            <td><%= coverage.premium_amount %></td>
            <td><%= coverage.premium_unit %></td>
            <td><%= coverage.coverage_unit %></td>
            <td><%= coverage.coverage_end_at %></td>
            <td><%= link_to 'Show', master_coverage_path(coverage) %></td>
            <td><%= link_to 'Edit', edit_master_coverage_path(coverage) %></td>
            <td><%= link_to 'Destroy', master_coverage_path(coverage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>  
<div class="row">
  <div class="col-lg-12">
    <div class="text-center">
      <%= paginate @coverages, :theme => 'twitter-bootstrap-3' %>  
    </div>
  </div>
</div>

