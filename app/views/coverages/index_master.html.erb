<div class="page-header">
  <%= link_to new_master_coverage_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Coverage
  <% end %>
  <h1>Listing Master Coverages</h1> 
</div>


<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Key</th>
          <th>Value</th>
          <th>Tag List</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @coverages.each do |coverage| %>
          <tr>
            <td>
              <p>
                <%= coverage.key %>
              </p>
              <p style="color: grey;">
                <%= coverage.description %>
              </p>
            </td>
            <td><%= coverage.value %></td>
            <td><%= coverage.tag_list %></td>
            <td><%= link_to 'Show', master_coverage_path(coverage) %></td>
            <td><%= link_to 'Edit', edit_master_coverage_path(coverage) %></td>
            <td><%= link_to 'Destroy', master_coverage_path(coverage), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>  
<div class="row">
  <div class="col-lg-12">
    <div class="text-center">
      <%= paginate @coverages, :theme => 'twitter-bootstrap-3' %>  
    </div>
  </div>
</div>

