<div class="row">
  <div class="col-lg-6">
      <%= form_for([@pa.book, @pa], html: {class: "form-horizontal"}) do |f| %>
        <% if @pa.errors.any? %>
          <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h2><%= pluralize(@pa.errors.count, "error") %> prohibited this pa from being saved:</h2>

            <ul>
            <% @pa.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :description, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :status, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.select :status, options_for_select([ "active", "inactive"]) %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :premium, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :premium, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :tag_list, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :tag_list, :value => "#{@pa.tag_list}", class: "form-control thunder-taginput", "data-role" => "tagsinput" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :reference_id, class: 'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :reference_id, class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.submit 'submit', class: 'btn btn-primary' %>
          </div>  
        </div>

      <% end %>
  </div>
  <div class="col-lg-6">
    <h3>Search from master pa</h3>
    <p>Rider ID: {{ pa_id }}</p>
    <search-pa-panel id="coverageSearch" uid="pa_id">
    </search-pa-panel>
  </div>
</div>



