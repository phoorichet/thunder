<div class="page-header">
  <%= link_to new_master_pa_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Master
  <% end %>
  <h1>Listing PAs</h1>
</div>


<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Status</th>
          <th>Tags</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pas.each do |pa| %>
          <tr>
            <td><%= pa.name %></td>
            <td><%= pa.description %></td>
            <td><%= pa.status %></td>
            <td><%= pa.tag_list %></td>
            <td><%= link_to 'Show', master_pa_path(pa) %></td>
            <td><%= link_to 'Edit', edit_master_pa_path(pa) %></td>
            <td><%= link_to 'Destroy', master_pa_path(pa), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="text-center">
      <%= paginate @pas, :theme => 'twitter-bootstrap-3' %>
    </div>    
  </div>
</div>




