<div class="page-header">
  <%= link_to new_insurance_return_path(@insurance), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Return
  <% end %>
  <h1>Listing returns</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Year</th>
            <th>Age</th>
            <th>Rate</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

     <tbody>
      <%= content_tag_for(:tr, @insurance.returns) do |r| %>
        <td><%= r.year %></td>
        <td><%= r.age %></td>
        <td><%= r.rate %></td>
        <td><%= link_to 'Show', insurance_return_path(r.insurance, r) %></td>
        <td><%= link_to 'Edit', edit_insurance_return_path(r.insurance, r) %></td>
        <td><%= link_to 'Destroy', [r.insurance, r], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
