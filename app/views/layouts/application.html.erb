<!DOCTYPE html>
<html>
<head>
  <title>Thunder</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="thunder">

<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#thunder-navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Thunder</a>
    </div>

    <div class="collapse navbar-collapse" id="thunder-navbar">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to 'Master Plans', masters_plans_path %></li>
        <li><%= link_to 'Master Riders', masters_riders_path %></li>
        <li><%= link_to 'Master Coverages', masters_coverages_path %></li>
        <li><%= link_to 'Users', insured_users_path %></li>
       <!--  <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li> -->
      </ul>
      <ul class="nav navbar-nav navbar-right">
       
<% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.email %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'setting', edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to(destroy_user_session_path, :method => :delete) do %> 
                    <i class="fa fa-sign-out fa-fw"></i> Logout
                <% end -%>
              </li>
            </ul>
          </li>
<% else %>
          <li class="dropdown">
           <li><%= link_to 'Sign In', new_user_session_path %></li>
          </li>
<% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<section>
	<div class="container">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-#{ name == :error ? "danger" : "success" } alert-dismissable", role: "alert" do %>
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= msg %>
      <% end %>
    <% end %>
    
		<%= yield %>		

 </div>
</section>

</body>
</html>
