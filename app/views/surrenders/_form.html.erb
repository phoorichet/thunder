<%= form_for([@surrender.insurance, @surrender], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @surrender.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@surrender.errors.count, "error") %> prohibited this surrender from being saved:</h4>

      <ul>
      <% @surrender.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :surrender_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :surrender_type, options_for_select(Surrender.selectable_types, selected: @surrender.surrender_type), class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :year, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :assured_age, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :assured_age, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cv, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cv, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rpu, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rpu, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ecv, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :ecv, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :eti, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :eti, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :eti_year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :eti_year, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :eti_day, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :eti_day, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :etipe, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :etipe, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
