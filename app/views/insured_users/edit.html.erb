<div class="row">
  <div class="col-lg-12">
    
    <h1>Editing Insured User</h1>


    <%= form_for(@insured_user, html: {class: "form-horizontal"}) do |f| %>
      <% if @insured_user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@insured_user.errors.count, "error") %> prohibited this insured_user from being saved:</h2>

          <ul>
          <% @insured_user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :first_name, class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name, class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :gender, class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.text_field :gender, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :date_of_birth, class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.datetime_select :date_of_birth,  class: "form-control"  %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :height, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :height, class: "form-control" %>
        </div>
      </div>  
      <div class="form-group">
        <%= f.label :weight, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :weight, class: "form-control" %>
        </div>
      </div> 

      <br/>
      <hr>
      <br/>

      <div class="form-group">
        <%= f.label :marital_status, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :marital_status, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :income, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :income, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :national_id, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :national_id, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :passport_id, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :passport_id, class: "form-control" %>
        </div>
      </div>
     
      <div class="form-group">
        <%= f.label :occupation, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :occupation, class: "form-control" %>
        </div>
      </div>  

      <br/>
      <hr>
      <br/>
      
      <div class="form-group">
        <%= f.label :parent_id, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :parent_id, class: "form-control" %>
        </div>
      </div>  
       <div class="form-group">
        <%= f.label :spouse_id, class: 'col-lg-2 control-label'  %>
        <div class="col-lg-10">
          <%= f.text_field :spouse_id, class: "form-control" %>
        </div>
      </div>  

      <br/>
      <hr>
      <br/>

      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= f.submit 'submit', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>

    <%= link_to 'Show', @insured_user %> |
    <%= link_to 'Back', insured_users_path %>

  </div>
</div>


