<p id="notice"><%= notice %></p>

<h1>Listing Insured Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insured_users.each do |insured_user| %>
      <tr>
        <td><%= insured_user.first_name %></td>
        <td><%= insured_user.last_name %></td>
        <td><%= link_to 'Show', insured_user %></td>
        <td><%= link_to 'Edit', edit_insured_user_path(insured_user) %></td>
        <td><%= link_to 'Destroy', insured_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @insured_users, :theme => 'twitter-bootstrap-3' %>

<%= link_to 'New Insured user', new_insured_user_path %>
