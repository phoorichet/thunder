<h1>Listing Plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Plan type</th>
      <th>Begin at</th>
      <th>End at</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.plan_type %></td>
        <td><%= plan.begin_at %></td>
        <td><%= plan.end_at %></td>
        <td><%= plan.book_id %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @plans, :theme => 'twitter-bootstrap-3' %>

<%= link_to 'New Plan', new_plan_path %>
