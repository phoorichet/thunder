<h3>Master Plan</h3>

<p>
  <strong>Name:</strong>
  <%= @plan.name %>
</p>

<p>
  <strong>Plan type:</strong>
  <%= @plan.plan_type %>
</p>

<p>
  <strong>Begin at:</strong>
  <%= @plan.begin_at %>
</p>

<p>
  <strong>End at:</strong>
  <%= @plan.end_at %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @plan.tag_list %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Code name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plan.riders.each do |rider| %>
      <tr>
        <td><%= rider.name %></td>
        <td><%= rider.description %></td>
        <td><%= rider.status %></td>
        <td><%= rider.code_name %></td>
        <td><%= link_to 'Show', [rider.plan, rider] %></td>
        <td><%= link_to 'Edit', edit_plan_rider_path(rider.plan, rider) %></td>
        <td><%= link_to 'Destroy', [rider.plan, rider], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add new rider', new_plan_rider_path(@plan) %>

<br>


<%= link_to 'Edit', edit_master_plan_path(@plan) %> <br>
<%= link_to 'Back to Master Plan', masters_plans_path %> 
