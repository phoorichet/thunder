<div class="row">
  <div class="col-lg-6">
    <%= form_for([@plan.book, @plan], html: {class: "form-horizontal"}) do |f| %>
      <% if @plan.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

          <ul>
          <% @plan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :name, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label 'main plan', class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.check_box "is_main", {:class => ""}, true, false %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :minimum_age, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :minimum_age, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :maximum_age, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :maximum_age, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :consider_year, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :consider_year, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :consider_gender, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :consider_gender, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :paid_period_length, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :paid_period_length, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :protection_length, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :protection_length, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :group, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :group, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :company, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :company, class: "form-control" %>
        </div>
      </div>

      <div class="form-group hide">
        <%= f.label :reference_id , class: 'col-lg-2 control-label'%>
        <div class="col-lg-10">
          <%= f.text_field :reference_id, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :tag_list, class: 'col-lg-2 control-label' %>
        <div class="col-lg-10">
          <%= f.text_field :tag_list, :value => "#{@plan.tag_list}", class: "form-control thunder-taginput", "data-role" => "tagsinput" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= f.submit 'submit', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-lg-6">
    <h3>Search from master plan</h3>
    <p>Rider ID: {{ plan_id }}</p>
    <search-plan-panel id="planSearch" uid="plan_id">
    </search-plan-panel>
  </div>
</div>
