<div class="row">
  <div class="col-lg-12">
    <%= form_for(@plan, url: master_plan_path(@plan), html: {class: "form-horizontal"} ) do |f| %>
      <% if @plan.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

          <ul>
          <% @plan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :name, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :minimum_age, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :minimum_age, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :maximum_age, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :maximum_age, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :consider_year, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :consider_year, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :consider_gender, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :consider_gender, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :paid_period_length, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :paid_period_length, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :protection_length, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :protection_length, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :group, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :group, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :company, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :company, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-2">
          <%= f.label :tag_list, class: 'control-label' %>
        </div>
        <div class="col-lg-10">
          <%= f.text_field :tag_list, :value => "#{@plan.tag_list}", class: "form-control thunder-taginput", "data-role" => "tagsinput" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <%= f.submit 'submit', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>


