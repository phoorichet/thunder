
<p>
  <strong>Name:</strong>
  <%= @plan.name %>
</p>

<p>
  <strong>Plan type:</strong>
  <%= @plan.plan_type %>
</p>

<p>
  <strong>Begin at:</strong>
  <%= @plan.begin_at %>
</p>

<p>
  <strong>End at:</strong>
  <%= @plan.end_at %>
</p>

<p>
  <strong>Book:</strong>
  <%= @plan.book_id %>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>Code name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plan.riders.each do |rider| %>
      <tr>
        <td><%= rider.name %></td>
        <td><%= rider.description %></td>
        <td><%= rider.status %></td>
        <td><%= rider.code_name %></td>
        <td><%= link_to 'Show', [rider.plan, rider] %></td>
        <td><%= link_to 'Edit', edit_plan_rider_path(rider.plan, rider) %></td>
        <td><%= link_to 'Destroy', [rider.plan, rider], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add new rider from master', new_from_master_plan_riders_path(@plan) %>

<br>


<%= link_to 'Edit', edit_book_plan_path(@plan.book, @plan) %> |
<%= link_to 'Back', insured_user_book_path(@plan.book.insured_user, @plan.book) %>
