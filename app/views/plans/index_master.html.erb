<h1>Listing Master Plans</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Minimum Age</th>
      <th>Maximum Age</th>
      <th>Consider Year</th>
      <th>Consider Gender</th>
      <th>Paid Period</th>
      <th>Protection Length</th>
      <th>Group</th>
      <th>Company</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.minimum_age %></td>
        <td><%= plan.maximum_age %></td>
        <td><%= plan.consider_year %></td>
        <td><%= plan.consider_gender %></td>
        <td><%= plan.paid_period_length %></td>
        <td><%= plan.protection_length %></td>
        <td><%= plan.group %></td>
        <td><%= plan.company %></td>
        <td><%= plan.tag_list %></td>
        <td><%= link_to 'Show', master_plan_path(plan) %></td>
        <td><%= link_to 'Edit', edit_master_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', master_plan_path(plan), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @plans, :theme => 'twitter-bootstrap-3' %>

<%= link_to 'New Master Plan', new_master_plan_path %>
