<div class="row">
  <div class="col-md-3">
    <%= render 'index' %>
  </div>

  <div class="col-md-9">
    <div class="row">
      <div class="col-md-9">
        <div class="page-header">
          <%= link_to persons_path, class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-list-alt"></span>
            Back
          <% end %>
          <%= link_to edit_person_path(@person), class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-pencil"></span>
            Edit
          <% end %>
          <h1>Show person</h1>
        </div>

        <div class="row">
          <div class="col-md-2">
            <img src="holder.js/100x100">
          </div>
          <div class="col-md-6">
            <div class="row">
              <div class="col-md-12">
                <div><%= @person.first_name %></div>
                <div><%= @person.company %></div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <div><%= @person.gender %></div>
                <div>Gender</div>
              </div>
              <div class="col-md-3">
                <div><%= @person.date_of_birth %></div>
                <div>Age</div>
              </div>
              <div class="col-md-3">
                <div>Classic</div>
                <div>Rank</div>
              </div>
              <div class="col-md-3">
                <div><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                <div>Prospect</div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            MOBILE
          </div>
          <div class="col-md-3">
            <%= @person.mobile %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            BIRTHDATE
          </div>
          <div class="col-md-3">
            <%= @person.date_of_birth %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            JOB
          </div>
          <div class="col-md-3">
            <%= @person.occupation %>
          </div>
          <div class="col-md-3">
            CIGARATTE
          </div>
          <div class="col-md-3">
            <%= @person.is_smoking %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            ID NUMBER
          </div>
          <div class="col-md-3">
            <%= @person.national_id %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            WEIGHT
          </div>
          <div class="col-md-3">
            <%= @person.weight %>
          </div>
          <div class="col-md-3">
            HEIGHT
          </div>
          <div class="col-md-3">
            <%= @person.height %>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <section class="relation">
          <div class="page-header">
            <%= link_to new_relation_person_path(@person), class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-plus"></span>
              Add
            <% end %>
            <h1>Family</h1>
          </div>

          <% @person.relations.each do |person| %>
            <div>
              <%= person.first_name %> <%= person.last_name %> -- <%= person.relation_desc %>
            </div>
            <!-- td><%= link_to 'Show', person_path(person) %></td>
            <td><%= link_to 'Destroy', delete_relation_person_path(@person, uid: person.id, relation_desc: person.relation_desc) , method: :delete, data: { confirm: 'Are you sure?' } %></td -->
          <% end %>

        </section>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
      <%= render "navs" %>

      <div>

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active"><a href="#hostpitalBenefits" aria-controls="hostpitalBenefits" role="tab" data-toggle="tab">HOSPITAL BENEFITS</a></li>
          <li role="presentation"><a href="#liveBenefits" aria-controls="liveBenefits" role="tab" data-toggle="tab">LIVE BENEFITS</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="hostpitalBenefits">
            <div>
              <h3>ค่ารักษาพยาบาลผู้ป่วยนอก</h3>
              <% @person.coverages_tagged_with_in_patient.each do |coverage| %>
              <div>
                <%= coverage.key %> -- <%= coverage.value %>
              </div>
              <% end %>
            </div>

            <div>
              <h3>ค่ารักษาพยาบาลผู้ป่วยใน</h3>
              <% @person.coverages_tagged_with_out_patient.each do |coverage| %>
              <div>
                <%= coverage.key %> -- <%= coverage.value %>
              </div>
              <% end %>
            </div>

            <div>
              <h3>ค่ายากลับบ้านต่อการรักษาเป็นผู้ป่วยใน</h3>
              <% @person.coverages_tagged_with_medicine_in_patient.each do |coverage| %>
              <div>
                <%= coverage.key %> -- <%= coverage.value %>
              </div>
              <% end %>
            </div>

            <div>
              <h3>ค่ารักษาโรคมะเร็งหรือโรคร้ายต่อเนื่อง</h3>
              <% @person.coverages_tagged_with_cancer_disease.each do |coverage| %>
              <div>
                <%= coverage.key %> -- <%= coverage.value %>
              </div>
              <% end %>
            </div>

            <div>
              <h3>ค่าชดเชยระหว่างการรักษาตัวในรพ</h3>
              <% @person.coverages_tagged_with_payback_in_hospital.each do |coverage| %>
              <div>
                <%= coverage.key %> -- <%= coverage.value %>
              </div>
              <% end %>
            </div>

            <div>
              <h3>ชดเชยเนื่องจากอุบัติเหตุ</h3>
              <% @person.coverages_tagged_with_accident.each do |coverage| %>
              <div>
                <%= coverage.key %> -- <%= coverage.value %>
              </div>
              <% end %>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="liveBenefits">
            <div>
              <h3>ความคุ้มครองและผลประโยชน์ที่ได้รับด้านชีวิต</h3>
              <% @person.coverages_tagged_with_life.each do |coverage| %>
              <div>
                <%= coverage.key %> -- <%= coverage.value %>
              </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
       
        

