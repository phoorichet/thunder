    <div class="col-sm-10">
      <%= f.check_box :is_smoking, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :company, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mobile, class: "col-sm-2 control-label" %>
