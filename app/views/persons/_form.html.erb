<%= form_for(@person, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @person.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h4>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :gender, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :date_of_birth, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :marital_status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :marital_status, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :spouse_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :spouse_id, class: "form-control" %>
