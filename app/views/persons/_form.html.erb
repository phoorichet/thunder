      <%= f.text_field :national_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :passport_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :passport_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :height, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :height, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weight, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :weight, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :occupation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :occupation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :person_type, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :person_type, class: "form-control" %>
