              <th>เบี้ยประกัน</th>
              <th>ปี</th>
            </tr>
          </thead>

          <tbody>
            <% @person.pas.each do |pa| %>
              <tr>
                <td>
                  <div><%= pa.name %></div>
                  <div><%= pa.description %></div>
                </td>
                <td></td>
                <td><%= pa.amount %></td>
                <td><%= pa.maximum_cover_age %></td>
                <td><%= pa.premium %></td>
                <td><%= 1 %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
