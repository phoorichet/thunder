<div class="row" style="margin-top: 86px;">
  <div class="col-md-2">
    <%= render 'index' %>
  </div>

  <div class="col-md-10">
    <section class="profile-wrapper">
      <div class="row">
        <div class="col-md-8" style="margin-left: 82px">
          <div class="page-header">
            <%= link_to persons_path, class: 'btn btn-default' do %>
              <span class="glyphicon glyphicon-list-alt"></span>
              Back
            <% end %>
            <%= link_to edit_person_path(@person), class: 'btn btn-primary' do %>
              <span class="glyphicon glyphicon-pencil"></span>
              Edit
            <% end %>
            <h3>INDIVIDUAL < <%= @person.fullname %></h3>
          </div>
          
          <div class="profile-1">
              <div class="row">
                <div class="col-md-2">
                  <img src="holder.js/110x120">
                </div>
                <div class="col-md-6">
                  <div class="row">
                    <div class="col-md-12">
                      <div>
                          <div><h4><%= @person.first_name.upcase %></h4></div>
                          <div><%= @person.company %></div>
                      </div>
                    </div>
                  </div>
                  <div class="row" style="border-top: 2px dotted;">
                    <div class="col-md-3 box-right-dotted">
                      <div class="detailed-box">
                          <div class="box-header"><%= @person.gender.first.upcase if @person.gender %></div>
                          <div class="box-subheader">Gender</div>
                      </div>
                    </div>
                    <div class="col-md-3 box-right-dotted">
                      <div class="detailed-box">
                          <div class="box-header"><%= @person.current_age %></div>
                          <div class="box-subheader">Age</div>
                      </div>
                    </div>
                    <div class="col-md-3 box-right-dotted">
                      <div class="detailed-box">
                          <div class="box-header">Classic</div>
                          <div class="box-subheader">Rank</div>
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="detailed-box">
                          <div class="box-header"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                          <div class="box-subheader">Prospect</div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  
                </div>
              </div>
          </div>

          <div class="profile-2">

              <div class="row">
                <div class="col-md-3">
                  MOBILE
                </div>
                <div class="col-md-3">
                  <%= @person.mobile %>
                </div>
              </div>

              <div class="row">
                <div class="col-md-3">
                  BIRTHDATE
                </div>
                <div class="col-md-3">
                  <%= @person.date_of_birth %>
                </div>
              </div>

              <div class="row">
                <div class="col-md-2">
                  JOB
                </div>
                <div class="col-md-2 right-border">
                  <%= @person.occupation %>
                </div>
                <div class="col-md-2">
                  CIGARATTE
                </div>
                <div class="col-md-2">
                  <%= @person.is_smoking %>
                </div>
              </div>

              <div class="row">
                <div class="col-md-3">
                  ID NUMBER
                </div>
                <div class="col-md-3">
                  <%= @person.national_id %>
                </div>
              </div>

              <div class="row end-row">
                <div class="col-md-2">
                  WEIGHT
                </div>
                <div class="col-md-2 right-border">
                  <%= @person.weight %>
                </div>
                <div class="col-md-2">
                  HEIGHT
                </div>
                <div class="col-md-2">
                  <%= @person.height %>
                </div>
              </div>

          </div>
        </div>
        <div class="col-md-3">
          <section class="relation">
            <div class="page-header">
              <%= link_to new_relation_person_path(@person), class: 'btn btn-primary' do %>
                <span class="glyphicon glyphicon-plus"></span>
                Add
              <% end %>
              <h2>Family</h2>
            </div>

            <% @person.relation_groups.each do |group, values| %>
              <div class="group-wrapper">
                  <div class="group-header"><%= group %></div>
                  <% values.each do |person| %>
                      <div class="group-person">
                        <%= link_to person_path(person) do %> 
                            <%= person.first_name %> <%= person.last_name %> 
                        <% end %>
                      </div>
                      <!-- td><%= link_to 'Show', person_path(person) %></td>
                      <td><%= link_to 'Destroy', delete_relation_person_path(@person, uid: person.id, relation_desc: person.relation_desc) , method: :delete, data: { confirm: 'Are you sure?' } %></td -->
                  <% end %>

              </div>
            <% end %>

          </section>
        </div>
      </div>
    </section>

    <section class="book">
      <div class="row">
        <div class="col-md-12">
        <%= render "navs" %>

        <div class="row book-card-wrapper">
          <div class="col-md-4 col-lg-4">
            <div class="book-card">
              <%= link_to new_person_book_path(@person) do %>
                <div class="row">
                  <div class="col-xs-12 book-new">
                    <div><i class="fa fa-plus-circle fa-4x"></i></div>
                    <div>เพิ่มเล่มกรมธรรม์</div>
                    <div><%= Date.current %></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <% count_row = 1 %>
          <% @person.books.length.downto(1).each do |i| %>
          <% book = @person.books[i-1] %>

          <% if count_row % 3 == 0 %>
            </div>
            <div class="row book-card-wrapper">
          <% end %>


          <div class="col-md-4 col-lg-4">
            <div class="book-card">
              <%= link_to person_book_path(book.person, book) do %>
                
                <div class="row">
                  <div class="col-xs-12">
                    <div class="book-number"><%= i %></div>
                  </div>
                </div>
                <div class="row header">
                  <div class="col-xs-6">
                    <div><%= book.main_insurance.name if book.main_insurance %></div>
                    <div>ประกัน</div>
                  </div>
                  <div class="col-xs-6">
                    <%= book.main_insurance.status if book.main_insurance %>
                  </div>
                </div>
                <div class="row detail-1">
                  <div class="col-xs-6">
                    <div class="detail-box">
                      <div class="box-header"><%= book.begin_age %></div>
                      <div class="box-content">
                        <div><%= book.begin_at %></div>
                        <div>เริ่มกรมธรรม์ (อายุ)</div>
                      </div>
                    </div>
                  </div>
                  <div class="col-xs-6">
                    <div class="detail-box">
                      <div class="box-header"><%= book.end_age %></div>
                      <div class="box-content">
                        <div><%= book.end_at %></div>
                        <div>สิ้นสุดกรมธรรม์ (อายุ)</div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row detail-2">
                  <div class="col-xs-12">
                    <div><%= book.main_insurance.amount if book.main_insurance %></div>
                    <div>ทุนประกัน <%= book.sum_insurance_amount %></div>
                  </div>
                </div>
                <div class="row detail-3">
                  <div class="col-xs-12">
                    <div><%= book.riders.map { |r| r.name } .join(", ") %></div>
                    <div>สัญญาคุมครองเพิ่มเติม</div>
                  </div>
                </div>
                <div class="row detail-4">
                  <div class="col-xs-12">
                    <div><%= book.number %></div>
                    <div>เลขที่กรมธรรม์</div>
                  </div>
                </div>
                 <div class="row footer">
                  <div class="col-xs-12">
                    <div>เบี้ยประกันรวม <%= book.sum_insurance_premium %></div>
                  </div>
                </div>
              
              <% end %>
            </div>
          </div>

          <% count_row += 1 %>
          <% end %>
        </div>

        </div>
      </div>
    </section>

    <section class="sum-premium">
      <div class="row">
        <div class="col-md-12">
          <div>
            <h3>เบี้ยประกันรวม <%= @person.sum_insurance_premium %></h3>
          </div>
        </div>
      </div>
    </section>

    <section class="general-insurance">
      <div class="row">
        <div class="col-md-12">
          <div class=""><h3>สรุปกรมธรรม์</h3></div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><h4>กรมธรรม์หลัก</h4></th>
                <th>ความคุ้มครองช่วยเหลือ</th>
                <th>ความคุ้มครอง</th>
                <th>อายุ</th>
                <th>เบี้ยประกัน</th>
                <th>ปี</th>
              </tr>
            </thead>

            <tbody>
              <% @person.insurances.each do |insurance| %>
                <tr>
                  <td><%= insurance.name %></td>
                  <td></td>
                  <td><%= insurance.amount %></td>
                  <td><%= insurance.maximum_cover_age %></td>
                  <td><%= insurance.premium %></td>
                  <td><%= insurance.paid_period_length %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div><h4>สัญญาคุ้มครองเพิ่มเติม</h4></div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover">
            <tbody>
              <% @person.riders.each do |rider| %>
                <tr>
                  <td>
                    <div><%= rider.name %></div>
                    <div><%= rider.description %></div>
                  </td>
                  <td></td>
                  <td><%= rider.amount %></td>
                  <td><%= rider.maximum_cover_age %></td>
                  <td><%= rider.premium %></td>
                  <td><%= 1 %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>     
    </section>

    <section class="accident-insurance">
       <div class="row">
        <div class="col-md-12">
          <div><h4>สัญญาคุ้มครองอุบัติเหตุ</h4></div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>กรมธรรม์หลัก</th>
                <th>ความคุ้มครองช่วยเหลือ</th>
                <th>ความคุ้มครอง</th>
                <th>อายุ</th>
                <th>เบี้ยประกัน</th>
                <th>ปี</th>
              </tr>
            </thead>

            <tbody>
              <% @person.pas.each do |pa| %>
                <tr>
                  <td>
                    <div><%= pa.name %></div>
                    <div><%= pa.description %></div>
                  </td>
                  <td></td>
                  <td><%= pa.amount %></td>
                  <td><%= pa.maximum_cover_age %></td>
                  <td><%= pa.premium %></td>
                  <td><%= 1 %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

  </div>
</div>