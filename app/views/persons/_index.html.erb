<div class="row">
    <div class="col-xs-12">
      <div class="person-index">
        <% alphabet = "" %>
        <% @persons.each do |person|%>
          <% if alphabet != person.first_name.first %>
              <% alphabet = person.first_name.first %>
               <div class="row">
                  <div class="col-xs-2">
                    <div>
                      <%= alphabet %>
                    </div>
                  </div>
              </div>
          <% end %>
          <div class="row">
              <div class="col-xs-10 col-xs-offset-2">
                <div class="person-name">
                  <%= link_to person_path(person) do %>
                    <%= person.first_name %> <%= person.last_name %>
                  <% end %>
                </div>
              </div>
          </div>
        <% end %> 
      </div>
    </div>
</div>


